{
    "name": "concept7/filament-deepl-translations",
    "description": "This is my package filament-deepl-translations",
    "keywords": [
        "Concept7",
        "laravel",
        "filament-deepl-translations"
    ],
    "homepage": "https://github.com/concept7/filament-deepl-translations",
    "license": "MIT",
    "authors": [
        {
            "name": "Martijn Wagena",
            "email": "martijn@concept7.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "deeplcom/deepl-php": "^1.12",
        "filament/forms": "^4.0",
        "filament/tables": "^4.0",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.22",
        "nunomaduro/collision": "^8.1",
        "orchestra/testbench": "^9.0||^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Concept7\\FilamentDeeplTranslations\\": "src/",
            "Concept7\\FilamentDeeplTranslations\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Concept7\\FilamentDeeplTranslations\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-filament-deepl-translations --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Concept7\\FilamentDeeplTranslations\\FilamentDeeplTranslationsServiceProvider"
            ],
            "aliases": {
                "FilamentDeeplTranslations": "Concept7\\FilamentDeeplTranslations\\Facades\\FilamentDeeplTranslations"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
